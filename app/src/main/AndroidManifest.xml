<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aseelalawadh.inventory_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayAllProduct"
            android:label="@string/title_activity_display_all" />
        <activity
            android:name=".AddProduct"
            android:label="@string/title_activity_add_product"
            android:parentActivityName=".DisplayAllProduct"/>
        <activity
            android:name=".EditProduct"
            android:label="@string/title_activity_edit_product"
            android:parentActivityName=".DisplayAllProduct"/>

        <activity
            android:name=".ProductDetails"
            android:label="@string/title_activity_product_details"
            android:parentActivityName=".DisplayAllProduct"/>
    </application>

</manifest>